---
const { title, description, iconColor, bgGradient, svgPath } = Astro.props;
---

<div class="text-center group">
  <div
    class={`w-16 h-16 bg-gradient-to-br ${bgGradient} rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300`}
  >
    <svg class={`w-8 h-8 ${iconColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d={svgPath}
      ></path>
    </svg>
  </div>
  <h4 class="text-xl font-semibold mb-3">{title}</h4>
  <p class="text-gray-400">{description}</p>
</div>
