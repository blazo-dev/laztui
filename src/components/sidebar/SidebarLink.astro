---
// Props: href, iconColor, gradientFrom, gradientTo, iconPath, label
const { href, iconColor, gradientFrom, gradientTo, iconPath, label } =
    Astro.props;
---

<a
    href={href}
    class="group flex items-center space-x-3 px-4 py-3 rounded-lg text-zinc-300 hover:text-gray-100 hover:bg-zinc-800/50 transition-all duration-200"
>
    <div
        class={`w-8 h-8 bg-gradient-to-br ${gradientFrom} ${gradientTo} rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform`}
    >
        <svg
            class={`w-4 h-4 ${iconColor}`}
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
        >
            <path
                d={iconPath}
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"></path>
        </svg>
    </div>
    <span class="font-medium">{label}</span>
</a>
