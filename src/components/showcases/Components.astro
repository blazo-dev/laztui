---
import { componentsData } from "../../data/componentsData";
import CodeDisplay from "./CodeDisplay.astro";
import TabSwitcher from "./TabSwitcher.astro";
---

<main class="md:ml-80 min-h-screen">
    <div class="p-6 md:p-8">
        {
            componentsData.map(
                ({ id, codeHTML, description, previewHTML, title }) => (
                    <section id={id} class="mb-16">
                        <div class="bg-zinc-900/30 backdrop-blur-sm border border-zinc-800 rounded-2xl p-8">
                            <div class="mb-8">
                                <h2 class="text-3xl font-bold mb-3 bg-gradient-to-r from-white to-zinc-400 bg-clip-text text-transparent">
                                    {title}
                                </h2>
                                <p class="text-zinc-400 text-lg">
                                    {description}
                                </p>
                            </div>

                            <TabSwitcher name={id} />

                            <div class="peer-checked/preview:block">
                                <div set:html={previewHTML} />
                            </div>

                            <div class="hidden peer-checked/code:block">
                                <CodeDisplay code={codeHTML} language="html" />
                            </div>
                        </div>
                    </section>
                )
            )
        }
    </div>
</main>
